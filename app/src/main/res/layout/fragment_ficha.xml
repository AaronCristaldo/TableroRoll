<?xml version="1.0" encoding="utf-8"?>
<!-- Layout de una ficha de personaje de D&D 5e con salvaciones, puntos de golpe, habilidades y equipo -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollViewFicha"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Encabezado -->
        <TextView
            android:id="@+id/tvTituloFicha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ficha de Personaje - DnD 5e"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Sección: Información Básica -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <!-- Nombre -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del Personaje:" />
            <EditText
                android:id="@+id/etNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Introduce el nombre" />

            <!-- Clase y Nivel (Se sustituye el campo para clase por un Spinner) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clase y Nivel:"
                android:layout_marginTop="8dp" />
            <EditText
                android:id="@+id/etClaseNivel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ej. Guerrero 5" />

            <!-- Spinner para seleccionar la Clase -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clase:"
                android:layout_marginTop="8dp" />
            <Spinner
                android:id="@+id/spinnerClases"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Spinner para seleccionar la Raza -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Raza:"
                android:layout_marginTop="8dp" />
            <Spinner
                android:id="@+id/spinnerRazas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp" />

            <!-- Spinner para seleccionar el Alineamiento -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alineamiento:"
                android:layout_marginTop="8dp" />
            <Spinner
                android:id="@+id/spinnerAlineamientos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp" />

            <!-- Spinner para seleccionar los Antecedentes -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Antecedentes:"
                android:layout_marginTop="8dp" />
            <Spinner
                android:id="@+id/spinnerAntecedentes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp" />

            <!-- XP -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Experiencia:"
                android:layout_marginTop="8dp" />
            <EditText
                android:id="@+id/etXP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Puntos de experiencia"
                android:inputType="number" />
        </LinearLayout>

        <!-- Sección: Atributos -->
        <TextView
            android:id="@+id/tvAtributos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Atributos"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="16dp" />

        <!-- Primera fila de atributos: FUE, DES, CON -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <!-- Fuerza -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fuerza (FUE)" />
                <EditText
                    android:id="@+id/etFuerza"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </LinearLayout>

            <!-- Destreza -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Destreza (DES)" />
                <EditText
                    android:id="@+id/etDestreza"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </LinearLayout>

            <!-- Constitución -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Constitución (CON)" />
                <EditText
                    android:id="@+id/etConstitucion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </LinearLayout>
        </LinearLayout>

        <!-- Segunda fila de atributos: INT, SAB, CAR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <!-- Inteligencia -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inteligencia (INT)" />
                <EditText
                    android:id="@+id/etInteligencia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </LinearLayout>

            <!-- Sabiduría -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sabiduría (SAB)" />
                <EditText
                    android:id="@+id/etSabiduria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </LinearLayout>

            <!-- Carisma -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carisma (CAR)" />
                <EditText
                    android:id="@+id/etCarisma"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </LinearLayout>
        </LinearLayout>

        <!-- Sección: Salvaciones -->
        <TextView
            android:id="@+id/tvSalvaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvaciones"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <!-- Salvación de Fuerza -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FUE:" />
                <EditText
                    android:id="@+id/etSalvacionFue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:hint="Bonus"
                    android:inputType="number" />
            </LinearLayout>

            <!-- Salvación de Destreza -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DES:" />
                <EditText
                    android:id="@+id/etSalvacionDes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:hint="Bonus"
                    android:inputType="number" />
            </LinearLayout>

            <!-- Salvación de Constitución -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CON:" />
                <EditText
                    android:id="@+id/etSalvacionCon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:hint="Bonus"
                    android:inputType="number" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
