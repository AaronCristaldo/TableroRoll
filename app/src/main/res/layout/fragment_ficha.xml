<?xml version="1.0" encoding="utf-8"?>
<!-- Layout completo para la ficha de personaje de D&D 5e -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollViewFicha"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <!-- Contenedor principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Encabezado -->
        <TextView
            android:id="@+id/tvTituloFicha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ficha de Personaje - DnD 5e"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp" />

        <!-- SECCIÓN: INFORMACIÓN BÁSICA -->
        <LinearLayout
            android:id="@+id/layoutInformacionBasica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <!-- Nombre del Personaje -->
            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del Personaje:" />
            <EditText
                android:id="@+id/etNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Introduce el nombre" />

            <!-- Nivel -->
            <TextView
                android:id="@+id/tvNivel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nivel:"
                android:layout_marginTop="8dp" />
            <EditText
                android:id="@+id/etNivel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Introduce el nivel (1-20)"
                android:inputType="number" />

            <!-- Bonificador de Competencia -->
            <TextView
                android:id="@+id/tvLabelBonificadorCompetencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bonificador de competencia:"
                android:layout_marginTop="8dp" />
            <TextView
                android:id="@+id/tvBonificadorCompetencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+2"
                android:textStyle="bold" />
            <!-- Spinner para Clases (de la API) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clase:"
                android:layout_marginTop="8dp" />
            <Spinner
                android:id="@+id/spinnerClases"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp" />

            <!-- Spinner para Raza -->
            <TextView
                android:id="@+id/tvRaza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Raza:"
                android:layout_marginTop="8dp" />
            <Spinner
                android:id="@+id/spinnerRazas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp" />

            <!-- Spinner para Alineamiento -->
            <TextView
                android:id="@+id/tvAlineamiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alineamiento:"
                android:layout_marginTop="8dp" />
            <Spinner
                android:id="@+id/spinnerAlineamientos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp" />

            <!-- Spinner para Antecedentes -->
            <TextView
                android:id="@+id/tvAntecedentes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Antecedentes:"
                android:layout_marginTop="8dp" />
            <Spinner
                android:id="@+id/spinnerAntecedentes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp" />

            <!-- XP -->
            <TextView
                android:id="@+id/tvXP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Experiencia:"
                android:layout_marginTop="8dp" />
            <EditText
                android:id="@+id/etXP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Puntos de experiencia"
                android:inputType="number" />

        </LinearLayout>
        <!-- FIN SECCIÓN: INFORMACIÓN BÁSICA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CA"
                    android:textStyle="bold"/>
                <EditText
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Iniciativa"
                    android:textStyle="bold"/>
                <EditText
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Movimiento"
                    android:textStyle="bold"/>
                <EditText
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"/>
            </LinearLayout>
        </LinearLayout>
        <!-- SECCIÓN: ATRIBUTOS -->
        <TextView
            android:id="@+id/tvAtributos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Atributos"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="16dp" />

        <!-- Primera fila de atributos: Fuerza, Destreza, Constitución -->
        <LinearLayout
            android:id="@+id/layoutAtributosFila1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <!-- Fuerza -->
            <LinearLayout
                android:id="@+id/layoutFuerza"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp">
                <TextView
                    android:id="@+id/tvFuerza"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fuerza (FUE)" />
                <EditText
                    android:id="@+id/etFuerza"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </LinearLayout>

            <!-- Destreza -->
            <LinearLayout
                android:id="@+id/layoutDestreza"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp">
                <TextView
                    android:id="@+id/tvDestreza"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Destreza (DES)" />
                <EditText
                    android:id="@+id/etDestreza"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </LinearLayout>

            <!-- Constitución -->
            <LinearLayout
                android:id="@+id/layoutConstitucion"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp">
                <TextView
                    android:id="@+id/tvConstitucion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Constitución (CON)" />
                <EditText
                    android:id="@+id/etConstitucion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </LinearLayout>
        </LinearLayout>

        <!-- Segunda fila de atributos: Inteligencia, Sabiduría, Carisma -->
        <LinearLayout
            android:id="@+id/layoutAtributosFila2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <!-- Inteligencia -->
            <LinearLayout
                android:id="@+id/layoutInteligencia"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp">
                <TextView
                    android:id="@+id/tvInteligencia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inteligencia (INT)" />
                <EditText
                    android:id="@+id/etInteligencia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </LinearLayout>

            <!-- Sabiduría -->
            <LinearLayout
                android:id="@+id/layoutSabiduria"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp">
                <TextView
                    android:id="@+id/tvSabiduria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sabiduría (SAB)" />
                <EditText
                    android:id="@+id/etSabiduria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </LinearLayout>

            <!-- Carisma -->
            <LinearLayout
                android:id="@+id/layoutCarisma"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp">
                <TextView
                    android:id="@+id/tvCarisma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carisma (CAR)" />
                <EditText
                    android:id="@+id/etCarisma"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </LinearLayout>
        </LinearLayout>
        <!-- FIN SECCIÓN: ATRIBUTOS -->

        <!-- SECCIÓN: SALVACIONES -->
        <TextView
            android:id="@+id/tvSalvaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvaciones"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="16dp" />

        <!-- Salvaciones en 2 filas -->
        <LinearLayout
            android:id="@+id/layoutSalvaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <!-- Primera fila: FUE, DES, CON -->
            <LinearLayout
                android:id="@+id/layoutSalvacionesFila1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">

                <!-- Salvación de Fuerza -->
                <LinearLayout
                    android:id="@+id/layoutSalvacionFue"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvSalvacionFue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fuerza (FUE)" />
                    <EditText
                        android:id="@+id/etSalvacionFue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Bonus"
                        android:inputType="number" />
                </LinearLayout>

                <!-- Salvación de Destreza -->
                <LinearLayout
                    android:id="@+id/layoutSalvacionDes"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvSalvacionDes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Destreza (DES)" />
                    <EditText
                        android:id="@+id/etSalvacionDes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Bonus"
                        android:inputType="number" />
                </LinearLayout>

                <!-- Salvación de Constitución -->
                <LinearLayout
                    android:id="@+id/layoutSalvacionCon"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvSalvacionCon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Constitución (CON)" />
                    <EditText
                        android:id="@+id/etSalvacionCon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Bonus"
                        android:inputType="number" />
                </LinearLayout>
            </LinearLayout>

            <!-- Segunda fila: INT, SAB, CAR -->
            <LinearLayout
                android:id="@+id/layoutSalvacionesFila2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">

                <!-- Salvación de Inteligencia -->
                <LinearLayout
                    android:id="@+id/layoutSalvacionInt"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvSalvacionInt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inteligencia (INT)" />
                    <EditText
                        android:id="@+id/etSalvacionInt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Bonus"
                        android:inputType="number" />
                </LinearLayout>

                <!-- Salvación de Sabiduría -->
                <LinearLayout
                    android:id="@+id/layoutSalvacionSab"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvSalvacionSab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sabiduría (SAB)" />
                    <EditText
                        android:id="@+id/etSalvacionSab"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Bonus"
                        android:inputType="number" />
                </LinearLayout>

                <!-- Salvación de Carisma -->
                <LinearLayout
                    android:id="@+id/layoutSalvacionCar"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvSalvacionCar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Carisma (CAR)" />
                    <EditText
                        android:id="@+id/etSalvacionCar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Bonus"
                        android:inputType="number" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!-- FIN SECCIÓN: SALVACIONES -->

        <!-- SECCIÓN: HABILIDADES -->
        <TextView
            android:id="@+id/tvHabilidades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Habilidades"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="16dp" />

        <!-- Contenedor para la lista de habilidades -->
        <LinearLayout
            android:id="@+id/layoutHabilidades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <!-- Para cada habilidad se añade una fila con: etiqueta, EditText y ToggleButton -->
            <!-- 1. Acrobacias (DES) -->
            <LinearLayout
                android:id="@+id/layoutAcrobacias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">
                <TextView
                    android:id="@+id/tvAcrobacias"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Acrobacias (DES):" />
                <EditText
                    android:id="@+id/etAcrobacias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Bonus"
                    android:inputType="number" />
                <ToggleButton
                    android:id="@+id/tbAcrobacias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOff="+"
                    android:textOn="✓" />
            </LinearLayout>

            <!-- 2. Arcanos (INT) -->
            <LinearLayout
                android:id="@+id/layoutArcanos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">
                <TextView
                    android:id="@+id/tvArcanos"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Arcanos (INT):" />
                <EditText
                    android:id="@+id/etArcanos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Bonus"
                    android:inputType="number" />
                <ToggleButton
                    android:id="@+id/tbArcanos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOff="+"
                    android:textOn="✓" />
            </LinearLayout>

            <!-- 3. Atletismo (FUE) -->
            <LinearLayout
                android:id="@+id/layoutAtletismo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">
                <TextView
                    android:id="@+id/tvAtletismo"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Atletismo (FUE):" />
                <EditText
                    android:id="@+id/etAtletismo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Bonus"
                    android:inputType="number" />
                <ToggleButton
                    android:id="@+id/tbAtletismo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOff="+"
                    android:textOn="✓" />
            </LinearLayout>

            <!-- 4. Engaño (CAR) -->
            <LinearLayout
                android:id="@+id/layoutEngano"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">
                <TextView
                    android:id="@+id/tvEngano"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Engaño (CAR):" />
                <EditText
                    android:id="@+id/etEngano"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Bonus"
                    android:inputType="number" />
                <ToggleButton
                    android:id="@+id/tbEngano"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOff="+"
                    android:textOn="✓" />
            </LinearLayout>

            <!-- 5. Historia (INT) -->
            <LinearLayout
                android:id="@+id/layoutHistoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">
                <TextView
                    android:id="@+id/tvHistoria"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Historia (INT):" />
                <EditText
                    android:id="@+id/etHistoria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Bonus"
                    android:inputType="number" />
                <ToggleButton
                    android:id="@+id/tbHistoria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOff="+"
                    android:textOn="✓" />
            </LinearLayout>

            <!-- 6. Interpretación (CAR) -->
            <LinearLayout
                android:id="@+id/layoutInterpretacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">
                <TextView
                    android:id="@+id/tvInterpretacion"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Interpretación (CAR):" />
                <EditText
                    android:id="@+id/etInterpretacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Bonus"
                    android:inputType="number" />
                <ToggleButton
                    android:id="@+id/tbInterpretacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOff="+"
                    android:textOn="✓" />
            </LinearLayout>

            <!-- 7. Intimidación (CAR) -->
            <LinearLayout
                android:id="@+id/layoutIntimidacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">
                <TextView
                    android:id="@+id/tvIntimidacion"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Intimidación (CAR):" />
                <EditText
                    android:id="@+id/etIntimidacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Bonus"
                    android:inputType="number" />
                <ToggleButton
                    android:id="@+id/tbIntimidacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOff="+"
                    android:textOn="✓" />
            </LinearLayout>

            <!-- 8. Investigación (INT) -->
            <LinearLayout
                android:id="@+id/layoutInvestigacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">
                <TextView
                    android:id="@+id/tvInvestigacion"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Investigación (INT):" />
                <EditText
                    android:id="@+id/etInvestigacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Bonus"
                    android:inputType="number" />
                <ToggleButton
                    android:id="@+id/tbInvestigacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOff="+"
                    android:textOn="✓" />
            </LinearLayout>

            <!-- 9. Juego de Manos (DES) -->
            <LinearLayout
                android:id="@+id/layoutJuegoManos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">
                <TextView
                    android:id="@+id/tvJuegoManos"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Juego de Manos (DES):" />
                <EditText
                    android:id="@+id/etJuegoManos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Bonus"
                    android:inputType="number" />
                <ToggleButton
                    android:id="@+id/tbJuegoManos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOff="+"
                    android:textOn="✓" />
            </LinearLayout>

            <!-- 10. Medicina (SAB) -->
