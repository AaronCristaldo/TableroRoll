<?xml version="1.0" encoding="utf-8"?>
<!-- Layout de una ficha de personaje de D&D 5e con salvaciones, puntos de golpe, habilidades y equipo -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollViewFicha"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Encabezado -->
        <TextView
            android:id="@+id/tvTituloFicha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ficha de Personaje - DD 5e"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Sección: Información Básica -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <!-- Columna 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre:" />
                <EditText
                    android:id="@+id/etNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre del personaje" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clase y Nivel:"
                    android:layout_marginTop="8dp"/>
                <EditText
                    android:id="@+id/etClaseNivel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ej. Guerrero 5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Raza:"
                    android:layout_marginTop="8dp"/>
                <EditText
                    android:id="@+id/etRaza"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Raza del personaje" />
            </LinearLayout>

            <!-- Columna 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Antecedentes:" />
                <EditText
                    android:id="@+id/etAntecedentes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ej. Forastero" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alineamiento:"
                    android:layout_marginTop="8dp"/>
                <EditText
                    android:id="@+id/etAlineamiento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ej. Caótico Bueno" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XP:"
                    android:layout_marginTop="8dp"/>
                <EditText
                    android:id="@+id/etXP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Puntos de experiencia"
                    android:inputType="number" />
            </LinearLayout>
        </LinearLayout>

        <!-- Sección: Atributos -->
        <TextView
            android:id="@+id/tvAtributos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Atributos"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="16dp" />

        <!-- Primera fila de atributos: FUE, DES, CON -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <!-- Fuerza -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FUE" />
                <EditText
                    android:id="@+id/etFuerza"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </LinearLayout>

            <!-- Destreza -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DES" />
                <EditText
                    android:id="@+id/etDestreza"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </LinearLayout>

            <!-- Constitución -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CON" />
                <EditText
                    android:id="@+id/etConstitucion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </LinearLayout>
        </LinearLayout>

        <!-- Segunda fila de atributos: INT, SAB, CAR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <!-- Inteligencia -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INT" />
                <EditText
                    android:id="@+id/etInteligencia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </LinearLayout>

            <!-- Sabiduría -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SAB" />
                <EditText
                    android:id="@+id/etSabiduria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </LinearLayout>

            <!-- Carisma -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CAR" />
                <EditText
                    android:id="@+id/etCarisma"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </LinearLayout>
        </LinearLayout>

        <!-- Sección: Salvaciones -->
        <TextView
            android:id="@+id/tvSalvaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvaciones"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <!-- Salvación de Fuerza -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FUE:" />
                <EditText
                    android:id="@+id/etSalvacionFue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:hint="Bonus"
                    android:inputType="number" />
            </LinearLayout>

            <!-- Salvación de Destreza -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DES:" />
                <EditText
                    android:id="@+id/etSalvacionDes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:hint="Bonus"
                    android:inputType="number" />
            </LinearLayout>

            <!-- Salvación de Constitución -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CON:" />
                <EditText
                    android:id="@+id/etSalvacionCon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:hint="Bonus"
                    android:inputType="number" />
            </LinearLayout>

            <!-- Salvación de Inteligencia -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INT:" />
                <EditText
                    android:id="@+id/etSalvacionInt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:hint="Bonus"
                    android:inputType="number" />
            </LinearLayout>

            <!-- Salvación de Sabiduría -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SAB:" />
                <EditText
                    android:id="@+id/etSalvacionSab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:hint="Bonus"
                    android:inputType="number" />
            </LinearLayout>

            <!-- Salvación de Carisma -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CAR:" />
                <EditText
                    android:id="@+id/etSalvacionCar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:hint="Bonus"
                    android:inputType="number" />
            </LinearLayout>
        </LinearLayout>

        <!-- Sección: Puntos de Golpe -->
        <TextView
            android:id="@+id/tvPuntosGolpe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Puntos de Golpe"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HP:" />
            <EditText
                android:id="@+id/etPuntosGolpe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:hint="Valor"
                android:inputType="number"
                android:ems="4" />
        </LinearLayout>

        <!-- Sección: Habilidades -->
        <TextView
            android:id="@+id/tvHabilidades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Habilidades"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="16dp" />

        <!-- Ejemplo de habilidad: Acrobacias -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acrobacias:" />
            <EditText
                android:id="@+id/etAcrobacias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:hint="Bonus"
                android:inputType="number"
                android:ems="3" />
        </LinearLayout>

        <!-- Ejemplo de habilidad: Atletismo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Atletismo:" />
            <EditText
                android:id="@+id/etAtletismo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:hint="Bonus"
                android:inputType="number"
                android:ems="3" />
        </LinearLayout>

        <!-- Sección: Equipo -->
        <TextView
            android:id="@+id/tvEquipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Equipo"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/etEquipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lista de equipo"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>
