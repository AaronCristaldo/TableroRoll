<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona el tipo de imagen:"
        android:textSize="20sp"
        android:layout_marginBottom="16dp"
        android:textColor="#000000"
        android:gravity="center" />

    <Button
        android:id="@+id/btnImagen715x1000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Imagen 715x1000"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnImagen2000x1430"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Imagen 2000x1430"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnImagen1000x1000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Imagen 1000x1000"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>
</LinearLayout>
